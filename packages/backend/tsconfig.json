{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/tests",
    "src/**/*.test.ts",
    "migrations",
    "src/scripts/_deprecated"
  ]
}